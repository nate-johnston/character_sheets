<!--
 Inventory fields are cost in gp, weight in pounds, and (optionally) quantity.
 Weight is per-item.  Weights of zero wll be displayed as "-".
  -->
         
<div id=newblock>
    <div id=borderblock>&nbsp;</div>
    <div class="hp" width=100%>INVENTORY</div>
    <table>
      <tr>
        <td class=ab>Item Name</td>
        <td class=ab>Cost</td>
        <td class=ab>Weight</td>
        <td class=ab>Quantity</td>
        <td class=ab>Net Cost</td>
        <td class=ab>Net Weight</td>
      </tr>
    <%
    total_cost = 0
    total_weight = 0
    $inventory.keys.each do |item_name|
      item = $inventory[item_name]
      cost = item[0]
      weight = item[1]
      quantity = item[2].nil? ? 1 : item[2]
      realcost = cost * quantity
      realweight = weight * quantity
      total_cost += realcost
      total_weight += realweight
      %>
    <tr>
      <td class=font8bot><%= item_name %></td>
      <td class=font8bot><%= cost %></td>
      <td class=font8bot><%= weight %></td>
      <td class=font8bot><%= quantity %></td>
      <td class=font8bot><%= realcost %></td>
      <td class=font8bot><%= realweight %></td>
    </tr>
    <% end %>
    </table>
    <p><b>Totals</b><br>
    Total value of posessions: <%= total_cost %><br>
    Total weight of posessions: <%= total_weight %><br>
    Max carrying capacity: <%= $str * 15 %><br>
